@model IEnumerable<SAKIB_PORTFOLIO.Models.EDUCATION>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<section>
    <div class="container-fluid p-5">
                <h1>EDUCATION</h1>
        <p>
            <a class="btn btn-warning" asp-action="Create">Create New</a>
        </p>
    <hr />
        <div>
            @if (Model.Count() > 0)
            {
                foreach(var item in Model)
                {
                    <div class="card">
                        <div class="card-body">
                            <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.COURSE)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.COURSE)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FROM_DATE)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.FROM_DATE)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TO_DATE)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.TO_DATE)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.INSTITUTE)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.INSTITUTE)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DESCRIPTION)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => item.DESCRIPTION)
                        </dd>
                    </dl>
                    <div>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AUTO_ID">Edit</a>
                        <a class="btn btn-info" asp-action="Index">Back to List</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AUTO_ID">Delete</a>
                    </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p> Sorry. No data found</p>
            }

        </div>
    </div>
</section>
