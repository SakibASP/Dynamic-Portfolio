@model IEnumerable<SAKIB_PORTFOLIO.Models.DESCRIPTION_TYPE>

@{
    ViewData["Title"] = "Index";
}

<section>
    <div class="container-fluid py-5">
        <h1>Index</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TYPE)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TYPE)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.AUTO_ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.AUTO_ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.AUTO_ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
