@model IEnumerable<SAKIB_PORTFOLIO.Models.MY_PROFILE>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container-fluid p-5">
        <h1>MY PROFILE</h1>
        @*<p>
            <a class="btn btn-warning" asp-action="Create">Create New</a>
        </p>*@
        <hr />
        <div>
            @if (Model.Count() > 0)
            {
                foreach(var item in Model)
                {
                    <div class="card">
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.MY_NAME)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.MY_NAME)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DESIGNATION)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.DESIGNATION)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DATE_OF_BIRTH)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.DATE_OF_BIRTH)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.AGE)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.AGE)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.MY_WEBSITE)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.MY_WEBSITE)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DEGREE)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.DEGREE)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PHONE)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.PHONE)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.EMAIL)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.EMAIL)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.CURRENT_CITY)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.CURRENT_CITY)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.HOMETOWN)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.HOMETOWN)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DES_1)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.DES_1)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DES_2)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.DES_2)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DES_3)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => item.DES_3)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PROFILE_IMAGE)
                                </dt>
                                <dd class="col-sm-10">
                                    @if (item.PROFILE_IMAGE != null)
                                    {
                                        <img class="img-fluid" style="height:120px;width:120px;" src="data:ImageData;base64,@System.Convert.ToBase64String(item.PROFILE_IMAGE)" />
                                    }
                                </dd>
                            </dl>

                            <div>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AUTO_ID">Edit</a>
                                <a class="btn btn-info" asp-action="Index">Back to List</a>
                                @*<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AUTO_ID">Delete</a>*@
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p> Sorry, No Data Found</p>
            }
        </div>
    </div>
</section>

