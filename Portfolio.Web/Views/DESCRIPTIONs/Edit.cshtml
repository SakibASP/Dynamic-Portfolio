@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener("DOMContentLoaded", function (e) {
            let typeList = document.getElementById("TYPE_ID");
            let projectName = document.getElementById("idProject");
            let experienceName = document.getElementById("idExperience");
            var selectedText = $(typeList).find("option:selected").text();

            // Capture change event
            $(typeList).on("change", function () {
                let currentSelectedText = $(this).find("option:selected").text();
                showHideProject(currentSelectedText, projectName, experienceName);
            });
            showHideProject(selectedText, projectName, experienceName);
        });
        const showHideProject = function (selectedText, projectName, experienceName) {
            //alert(selectedText);
            if (selectedText == "Project") {
                projectName.style.display = "block";
                experienceName.style.display = "none";
            }
            else {
                projectName.style.display = "none";
                experienceName.style.display = "block";
            }
        }
    </script>
}
