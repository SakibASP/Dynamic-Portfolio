@model Portfolio.Models.PROJECTS

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container-fluid p-5">
        <h1>Edit</h1>

<h4>PROJECTS</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AUTO_ID" />
            <input type="hidden" asp-for="LOGO" />
            <div class="form-group">
                <label asp-for="PROJECT_NAME" class="control-label"></label>
                <input asp-for="PROJECT_NAME" class="form-control" />
                <span asp-validation-for="PROJECT_NAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LOGO" class="control-label"></label>
                <img class="img-fluid" style="height:120px;width:120px;" src="data:ImageData;base64,@System.Convert.ToBase64String(Model.LOGO)" />
                <span asp-validation-for="LOGO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LOGO" class="control-label"></label>
                        <input type="file" id="fileInput" accept="image/*" asp-for="LOGO" class="form-control-file" multiple="multiple" />
                <span asp-validation-for="LOGO" class="text-danger"></span>
            </div>
            <div id="file-preview"></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/file-preview.js"></script>
}
